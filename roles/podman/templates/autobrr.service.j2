# autobrr.service

[Unit]
Description=Podman autobrr.service
Documentation=man:podman-generate-systemd(1)
Wants=network-online.target
After=network-online.target nss-lookup.target
{% if "gluetun" in podman_user.containers and podman_user.autobrr_gluetun_proxy %}
Wants=gluetun.service
After=gluetun.service
Requires=gluetun.service
{% endif %}
RequiresMountsFor=%t/containers

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
Restart=on-failure
RestartSec=5
TimeoutStopSec=70
ExecStartPre=/bin/rm \
    -f %t/%n.ctr-id
ExecStart=/usr/bin/podman run \
    --cidfile=%t/%n.ctr-id \
    --cgroups=no-conmon \
    --rm \
    --sdnotify=conmon \
    --detach \
    --replace \
    --label io.containers.autoupdate=registry \
    --name=autobrr \
    --userns keep-id:uid=1000,gid=1000 \
    --user 1000:1000 \
    --network=container:gluetun \
    --volume {{ podman_user.autobrr_config_dir }}:/config:Z \
    --env TZ='US/Eastern' \
    --env AUTOBRR__HOST=0.0.0.0 \
    ghcr.io/autobrr/autobrr:latest
ExecStop=/usr/bin/podman stop \
    --ignore \
    --time=10 \
    --cidfile=%t/%n.ctr-id
ExecStopPost=/usr/bin/podman rm \
    --force \
    --ignore \
    --time=10 \
    --cidfile=%t/%n.ctr-id
Type=notify
NotifyAccess=all

[Install]
WantedBy=default.target
