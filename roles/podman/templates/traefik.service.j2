# traefik.service

[Unit]
Description=Podman traefik.service
Documentation=man:podman-generate-systemd(1)
Wants=network-online.target
After=network-online.target
RequiresMountsFor=%t/containers

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
Restart=on-failure
RestartSec=5
TimeoutStopSec=70
ExecStart=/usr/bin/podman run \
    --cidfile=%t/%n.ctr-id \
    --cgroups=no-conmon \
    --rm \
    --sdnotify=conmon \
    --detach \
    --replace \
    --label io.containers.autoupdate=registry \
    --name=traefik \
    --network=slirp4netns:port_handler=slirp4netns \
    --dns={{ DNS }} \
    --publish 443:443/tcp \
    --volume {{ podman_user.traefik_config_dir }}/static_conf.yml:/etc/traefik/traefik.yml:Z \
    --volume {{ podman_user.traefik_config_dir }}/dynamic_conf.yml:/etc/traefik/dynamic_conf.yml:Z \
    --volume {{ podman_user.traefik_config_dir }}/ssl:/etc/traefik/ssl:Z \
    docker.io/library/traefik:v2.10
ExecStop=/usr/bin/podman stop \
    --ignore \
    --time=10 \
    --cidfile=%t/%n.ctr-id
ExecStopPost=/usr/bin/podman rm \
    --force \
    --ignore \
    --time=10 \
    --cidfile=%t/%n.ctr-id
Type=notify
NotifyAccess=all

[Install]
WantedBy=default.target
