# container-unifi-controller.service

[Unit]
Description=Podman container-unifi-controller.service
Documentation=man:podman-generate-systemd(1)
Wants=network-online.target
After=network-online.target nss-lookup.target
RequiresMountsFor=%t/containers

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
Restart=on-failure
TimeoutStopSec=70
ExecStartPre=/bin/rm \
    -f %t/%n.ctr-id
ExecStart=/usr/bin/podman run \
    --cidfile=%t/%n.ctr-id \
    --cgroups=no-conmon \
    --rm \
    --sdnotify=conmon \
    --detach \
    --replace \
    --label io.containers.autoupdate=registry \
    --uidmap 1000:0:1 \
    --uidmap 0:1:1000 \
    --uidmap 1001:1001:64536 \
    --name=unifi-controller \
    --env PUID=1000 \
    --env PGID=1000 \
    --env TZ={{ TZ }} \
    --network host \
    --publish 127.0.0.1:8443:8443/tcp \
    --publish 3478:3478/udp \
    --publish 10001:10001/udp \
    --publish 8080:8080/tcp \
    --volume {{ podman_user.container_configs_dir }}/unifi-controller:/config:Z \
    lscr.io/linuxserver/unifi-controller:latest
ExecStop=/usr/bin/podman stop \
    --ignore \
    --time=10 \
    --cidfile=%t/%n.ctr-id
ExecStopPost=/usr/bin/podman rm \
    --force \
    --ignore \
    --time=10 \
    --cidfile=%t/%n.ctr-id
Type=notify
NotifyAccess=all

[Install]
WantedBy=default.target
